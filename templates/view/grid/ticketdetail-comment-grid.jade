    style.
        .ticket-heading{
            padding:8px;
            background-color:lightgray!important;
        }
        .ticket-heading a {
            color: black!important;
        }
        .ticket-comment li {
            background: #e7ebee none repeat scroll 0 0 padding-box;
            border: 1px solid #e7ebee;
            border-radius: 3px;
            float: left;
            font-size: 0.875em;
            margin: 10px 10px 10px 0;
            overflow: hidden;
            padding: 0;
        }
        .ticket-comment li .img{
            background-clip: padding-box;
            border-radius: 3px 3px 0 0;
            height: 87px;
            overflow: hidden;
            text-align: center;
            width: 130px;
        }
        }
    .main-box-body.clearfix
        .row
            {header}{cols}{col}{/}{/}{/}
            {rows}{row}
            div(class="{$odd_even} col-md-{col-width}12{/}" data-id="{$id}")
                {cols} 
                .conversation-wrapper
                  .conversation-content
                    .slimScrollDiv(style='position: relative; overflow: hidden; width: auto;')
                      .conversation-inner(style='overflow: hidden; width: auto;')
                        .conversation-item.item-left.clearfix
                          .conversation-user
                            {$avatar}
                          .conversation-body
                            .name(style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap; margin-bottom:5px; width:85%") {$title_expression}
                            span.label.label-success.pull-right{$type} / {$status}
                            .time.hidden-xs.xepan-padding-horizontal-small  {$callback_date}
                            #accordion.panel-group(role='tablist', aria-multiselectable='true')
                              .panel.panel-default
                                #headingOne.panel-heading.ticket-heading(role='tab')
                                  h4.panel-title
                                    a(role='button', data-toggle='collapse', data-parent='#accordion', href='#collapsed_{$id}', aria-expanded='true', aria-controls='collapseOne')
                                        .text(style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;") {$message_expression}
                                .panel-collapse.collapse(id="collapsed_{$id}" role='tabpanel', aria-labelledby='headingOne')
                                  .panel-body
                                    .text.xepan-push-large {$message_expression} 
                                    #email-detail-attachments
                                        #email-attachments-header.clearfix
                                          .headline
                                            {check_attach}
                                            i.fa.fa-paperclip &nbsp;
                                            span Attachments : 
                                            b {attachment_count}( 3 ){/}
                                            {/}
                                          .tools
                                    #email-attachments-content
                                      {$attachments}

            {/}
            {/}{/}
            .col-md-12
                {$form}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

            {totals}{cols}{col}{$content}{/}{/}{/}
        {$Paginator}
