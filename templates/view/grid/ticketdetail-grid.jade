.xepan-grid.main-box.clearfix(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                input#322fb157__id_quicksearch_q(type='text', placeholder='Search', value='', data-shortname='q', name='322fb157__id_quicksearch_q', data-initvalue='')
                div(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix
        .row
            {header}{cols}{col}{/}{/}{/}
            {rows}{row}
            div(class="{$odd_even} col-md-{col-width}12{/}" data-id="{$id}")
                {cols} 
                .conversation-wrapper
                  .conversation-content
                    .slimScrollDiv(style='position: relative; overflow: hidden; width: auto;')
                      .conversation-inner(style='overflow: hidden; width: auto;')
                        .conversation-item.item-left.clearfix
                          .conversation-user
                            {$avatar}
                          .conversation-body
                            .name {$title}
                            .time.hidden-xs {$created_at}
                            .text(style="overflow: hidden; height: 25px;") {$message}
                              
                        .row.form-group

            {/}
            {/}{/}
            .col-md-3
            .col-md-10.text-right
                {$form}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

            {totals}{cols}{col}{$content}{/}{/}{/}
        {$Paginator}
