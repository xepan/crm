.xepan-grid.main-box.clearfix(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                input(type='text', placeholder='Search', value='', data-shortname='q', name='322fb157__id_quicksearch_q', data-initvalue='')
                div(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix
        .row
            {header}{cols}{col}{/}{/}{/}
            {rows}{row}
            //- div(class="{$odd_even} col-md-{col-width}12{/}" data-id="{$id}")
            div(id="{$_name}" class="{$class}")
            
                {cols} 
                .conversation-wrapper
                  .conversation-content
                    .slimScrollDiv(style='position: relative; overflow: hidden; width: auto; height: 352px;')
                      .conversation-inner(style='overflow: hidden; width: auto; height: 352px;')
                        .conversation-item.item-left.clearfix
                          .conversation-user
                            img(src='img/samples/ryan.png', alt='')
                          .conversation-body
                            .name {contact}Bhavani pvt ltd{/}
                            .time.hidden-xs {created_at}September 21, 2013 18:28{/}
                            .text
                              {message}| I don't think they tried to market it to the billionaire, spelunking,
                              | base-jumping crowd.{/}
                        .conversation-item.item-right.clearfix
                          .conversation-user
                            img(alt='', src='img/samples/kunis.png')
                          .conversation-body
                            .name
                                {to}Xavoc Technocrats{/}
                            .time.hidden-xs {created_at}September 27, 2016 18:28{/}
                            .text
                                {message}| The path of the righteous man is beset on all sides by good will.{/}
                        .row.form-group
                          .col-md-3
                            input(type='file', data-edit='insertImage', data-target='#pictureBtn', data-role='magic-overlay')

                          .col-md-10
                            input#exampleInpSubject.form-control(type='text', placeholder='Enter subject')
                        textarea.form-control(placeholder='Enter your message...', rows='2')
                        button.btn.btn-success.pull-right(type='submit') Send message
                        button.btn.btn-default.pull-right(type='button')
                          i.fa.fa-times
                          |  Cancel
            {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

            {totals}{cols}{col}{$content}{/}{/}{/}
        {$Paginator}
